    <style name="fq_InputDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="fq_take_photo_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/fq_slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/fq_slide_out_to_bottom</item>
    </style>

    <style name="ActionSheet" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/ActionSheetAnimation</item>
    </style>

    <style name="ActionSheetAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/fq_push_up_in</item>
        <item name="android:windowExitAnimation">@anim/fq_push_up_out</item>
    </style>

    <style name="DialogStyle">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="fq_widget_title_black_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#2f2f2f</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="widget_title_black_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/fq_text_black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColorHint">@color/fq_text_gray</item>
    </style>

    <style name="fq_setting_item_bg_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/fq_list_view_item_selector</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="fq_setting_item_text_bg_style" parent="fq_setting_item_bg_style">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/fq_colorTextTitlePrimary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColorHint">@color/fq_text_gray</item>
    </style>


    <style name="animate_dialog_scale">
        <item name="android:windowEnterAnimation">@anim/fq_enter_scale_dialog</item>
        <item name="android:windowExitAnimation">@anim/fq_exit_scale_dialog</item>
    </style>


    <style name="ImageEditTheme" parent="android:Theme.Holo">

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="ImageTextDialog" parent="android:Theme.Holo.Dialog">

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:windowSoftInputMode">stateAlwaysVisible|adjustResize</item>

        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.8</item>

        <item name="android:windowAnimationStyle">@style/ImageDialogAnimation</item>

    </style>

    <style name="ImageDialogAnimation" parent="android:Animation.Dialog">

        <item name="android:windowEnterAnimation">@anim/image_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/image_dialog_exit</item>

    </style>

    <style name="ImageGalleryTheme" parent="Theme.AppCompat">
        <item name="image_gallery_span_count">4</item>
        <item name="image_gallery_select_shade">#90FFFFFF</item>
    </style>

    <declare-styleable name="DrawableTextView">
        <attr name="textDrawable" format="reference" />
    </declare-styleable>

    <declare-styleable name="SmoothInputLayout"><attr format="dimension" name="silDefaultKeyboardHeight"/><attr format="dimension" name="silMinKeyboardHeight"/><attr format="reference" name="silInputView"/><attr format="reference" name="silInputPane"/><attr format="boolean" name="silAutoSaveKeyboardHeight"/></declare-styleable>

</resources>
